{
  "name": "fitness-tracker-backend",
  "version": "2.0.0",
  "description": "Production-ready backend for Fitness Tracker application with Clean Architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test mocha tests/**/*.test.js --recursive --exit --timeout 10000",
    "test:watch": "NODE_ENV=test mocha tests/**/*.test.js --recursive --watch",
    "test:coverage": "NODE_ENV=test nyc mocha tests/**/*.test.js --recursive --exit",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.3",
    "validator": "^13.11.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "faker": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Joseph Jilovec",
  "license": "MIT",
  "keywords": [
    "fitness",
    "workout",
    "tracker",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ]
}

