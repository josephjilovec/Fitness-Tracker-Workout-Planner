# MongoDB connection string (e.g., MongoDB Atlas URI or local MongoDB instance)
# Example: mongodb://localhost:27017/fitness-tracker or mongodb+srv://<user>:<pass>@cluster0.mongodb.net/fitness-tracker
MONGO_URI=<your_mongodb_uri>

# Secret key for signing JSON Web Tokens (JWT) for authentication
# Should be a strong, unique string (e.g., generated with crypto.randomBytes)
JWT_SECRET=<your_jwt_secret>

# Port for the Express server to listen on
# Default is 5000 for local development
PORT=5000
